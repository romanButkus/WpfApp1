<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="AuthorizationLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="#35d1ff"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        
    </Style>

    <Style x:Key="AuthorizeButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#1f2c35"/>
        <Setter Property="Foreground" Value="#7bff7b"/>
        
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
    </Style>
</ResourceDictionary>